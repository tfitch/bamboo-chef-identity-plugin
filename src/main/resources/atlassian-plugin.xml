<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}" />
        <param name="plugin-icon">images/pluginIcon.png</param>
        <param name="plugin-logo">images/pluginLogo.png</param>
    </plugin-info>

    <!-- add our i18n resource -->
    <resource type="i18n" name="i18n" location="chef-identity"/>
    
    <!-- add our web resources -->
    <web-resource key="chef-identity-resources" name="chef-identity Web Resources">
        <dependency>com.atlassian.auiplugin:ajs</dependency>
        
        <resource type="download" name="chef-identity.css" location="/css/chef-identity.css"/>
        <resource type="download" name="chef-identity.js" location="/js/chef-identity.js"/>
        <resource type="download" name="images/" location="/images"/>

        <context>chef-identity</context>
    </web-resource>

    <web-item key="bamboo-menu-item" name="Chef Identity Admin" section="system.admin/plugins" weight="10" application="bamboo">
        <description>Add or Configure Chef Server Identities (key files)</description>
        <label key="Chef Identity Keys" />
        <link linkId="chef-identity-admin-link">/plugins/servlet/chef-identity/admin</link>
    </web-item>
    
</atlassian-plugin>